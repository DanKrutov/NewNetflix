    @@keyframes anim1 {
	100%   { left:20px; top:350px; opacity:1;}
	0%  { left:400px; top:350px; opacity:0;}
	}
    @@keyframes anim2 {
	100%   {background-color: black; opacity:0.7;}
	0%  {background-color: black; opacity:0.4;}
	}

</style>
