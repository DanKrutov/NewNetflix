@model FrontEnd2.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <!--<h4>Movie</h4>-->
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título do filme
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvTitle)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvDate)
        </dd>
        <dt class = "col-sm-2">
            Imagem
        </dt>
        <dd class = "col-sm-10">
            <!--@Html.DisplayFor(model => model.MvImg)-->
            <img src=@Html.DisplayFor(model => model.MvImg) width="300" height="400" />
        </dd>
        <dt class = "col-sm-2">
            Duração
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvDuration) minutos
        </dd>
        <dt class = "col-sm-2">
            Sinopse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MvSynopsis)
        </dd>

        <dt class = "col-sm-2">
            Gênero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gr.Genre1)
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MvId">Editar</a> |
    <a asp-action="Index">Voltar a listagem</a>
</div>
